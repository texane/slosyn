CC	:=	gcc
LD	:=	gcc
#CFLAGS	:=	-Wall -Werror -D_DEBUG=1 -I/home/texane/install/include -I../src
CFLAGS	:=	-Wall -D_DEBUG=1 -I../src
LFLAGS	:=	-L$(HOME)/lib -lusb
RM	:=	rm -f


BIN	:=	slosyn

SRCS	:=	../src/main.c		\
		../src/slosyn.c

OBJS	:=	$(SRCS:.c=.o)


all	:	$(BIN)
$(BIN)	:	$(OBJS)
		$(LD) $(LFLAGS) -o $(BIN) $(OBJS)
clean	:
		$(RM) $(OBJS)
fclean	:	clean
		$(RM) $(BIN)
re	:	fclean all
%.o	:	%.c
		$(CC) $(CFLAGS) -o $@ -c $<
